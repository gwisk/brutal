---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import FeatureList from '@components/feature/FeatureList.astro';

const posts = await getCollection("feature").then((collection) => {
	return collection.sort(
		(a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime(),
	);
});
---

<Layout
  title='Feature'
  description='FilmSlop Features |Â On this page you can find a collection of features'
  pageTitle='FilmSlop Features'
>
  <main class='bg-green p-6'>
    <FeatureList posts={posts} />
  </main>
</Layout>
