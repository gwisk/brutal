---
interface Props {
  content: any;
}

const { content } = Astro.props;
---

<article class='dm-serif prose-slate w-sm md:w-prose md:prose'>
  <img src={content.imgUrl} class='rounded object-cover'
  alt="A starry night sky."><br>
  <h1>{content.title}</h1>
  <h2 style="margin-top:-5px">{content.subtitle}</h2>


  <p class='dm-serif text-sm md:text-base'>
  {content.author} <br>
  {content.pubDate} 
  </p>
  <slot />
  <h3><i>{content.bio}</i></h3>
  <a href='/blog/' title='Back to blog'>&larr; Back to blog</a>
</article>