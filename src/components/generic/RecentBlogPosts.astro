---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';
import { Button, Card } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection("blog").then((collection) => {
	return collection
		.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
		.slice(0, count ?? 3);
});
---

<section class='mt-4'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='dm-serif text-2xl md:text-4xl lg:text-6xl mb-6'>
        Recent Articles
      </h2>
      <div class='hidden md:block'>
        <Button href='/blog/'><p class="poppins">All articles &rarr;</p></Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/blog/'><p class="poppins">All articles &rarr;</p></Button>
      </div>
    </div>
    <BlogList posts={posts} />
  </Card>
</section>
