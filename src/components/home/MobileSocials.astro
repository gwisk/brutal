---
const socials = [
  {
    name: 'Twitter',
    url: 'https://www.twitter.com/filmslop',
    icon: 'i-ph-twitter-logo-fill',
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/filmslop',
    icon: 'i-ph-instagram-logo-fill',
  },
  //   name: 'Youtube',
  //   url: 'https://www.youtube.com/',
  //   icon: 'i-teenyicons-youtube-solid',
  // },

  // { name: 'Patreon',
  //   url: '',
  //   icon: 'i-ph-patreon-logo-fill'
  // },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-3 py-2 text-black border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-5']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
